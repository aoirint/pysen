{
    "version": "2.0.0",
    "problemMatcher": [
        {
            "owner": "py",
            "fileLocation": "absolute",
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s*(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "message": 4
            }
        }
    ],
    "tasks": [
        {
            "label": "pysen lint entire project",
            "type": "shell",
            "command": "source /path/to/venv/bin/activate; pysen run lint --error-format gnu"
        },
        {
            "label": "pysen lint a single file",
            "type": "shell",
            "command": "source /path/to/venv/bin/activate; pysen run_files lint --error-format gnu ${file}"
        },
        {
            "label": "pysen format entire project",
            "type": "shell",
            "command": "source /path/to/venv/bin/activate; pysen run format --error-format gnu"
        },
        {
            "label": "pysen format a single file",
            "type": "shell",
            "command": "source /path/to/venv/bin/activate; pysen run_files format --error-format gnu ${file}"
        }
    ]
}
